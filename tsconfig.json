
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "index.tsx", 
    "App.tsx", 
    "types.ts", 
    "views/Dashboard.tsx", 
    "views/GrowSpaces.tsx", 
    "views/PlantDetail.tsx"
  ],
  "exclude": ["node_modules", "services/geminiService.ts", "views/AIAssistant.tsx"]
}
